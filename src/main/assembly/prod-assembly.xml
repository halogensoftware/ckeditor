<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  
	<id>prod</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<baseDirectory>ckeditor</baseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/${project.build.finalName}</directory>
			<excludes>
				<exclude>_source/</exclude>
				<exclude>CHANGES.html</exclude>
				<exclude>.htaccess</exclude>										
				<exclude>*.asp</exclude>
				<exclude>*.php</exclude>
				<exclude>ckeditor.pack</exclude>
				<exclude>ckeditor_basic_source.js</exclude>
				<exclude>ckeditor_source.js</exclude>
				<exclude>INSTALL.html</exclude>			
			</excludes>
			<outputDirectory>ckeditor</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>